{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run App",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "make project",
            "program": "${workspaceFolder}/run_app",
            "args": [
                "datasets/test.csv"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb"
        }
    ]
}